include /mixins/forms.pug

doctype html
html(lang='en')
  head
   title= 'Task Manager'
   script(src='/assets/main.js')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href="/") Task Manager
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      div.collapse.navbar-collapse#collapsibleNavbar
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=urlForRouter('users')) Users
        ul.navbar-nav
          if isSignedIn()
            li.nav-item
              a.nav-link(href='/session' data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href='/session/new') Sign In
            li.nav-item
              a.nav-link(href=urlForRouter('newUser')) Sign Up
    div.container
      block content
